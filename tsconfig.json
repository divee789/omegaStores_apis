{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2017",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "dist",
    "baseUrl": ".",
    "allowJs": true
  },
  "include": ["src/**/*"],
  "exclude": ["tests/**/*", "node_modules/**/*"]
}
